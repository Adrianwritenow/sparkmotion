{
  "name": "sparkmotion",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "db:generate": "pnpm --filter @sparkmotion/database generate",
    "db:migrate": "pnpm --filter @sparkmotion/database migrate",
    "db:push": "pnpm --filter @sparkmotion/database push",
    "db:studio": "pnpm --filter @sparkmotion/database studio",
    "db:seed-prod": "pnpm --filter @sparkmotion/database seed-prod"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.7.0"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "auditConfig": {
      "ignoreCves": [
        "GHSA-5j98-mcp5-4vw2",
        "GHSA-h25m-26qc-wcjf",
        "GHSA-7v5v-9h63-cj86"
      ]
    }
  }
}
